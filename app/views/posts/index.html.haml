      .header-content__logo
        = link_to "#" do
          %h3 Gotou takeyuki
        = link_to "#" do
          %h4 portfolio
    .header-nav-container
      %ul
        %li
          %a(href="#about")
            About
        %li
          %a(href="#work")
            Work
        %li
          %a(href="#faq")
